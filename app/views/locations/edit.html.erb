<div class="row">
  <div class="col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10">
    <%= form_for(@location) do |f| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Edit location</h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <%= f.label "Photo" %><br />
            <%= f.file_field :avatar %>
          </div>
          <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :homepage %><br />
            <%= f.url_field :homepage, class: "form-control", placeholder: "http://example.org" %>
          </div>
          <hr />
          <div class="row">
            <div class="col-xs-12 col-sm-6 form-group">
              <%= f.label :street_address %><br />
              <%= f.text_field :street_address, class: "form-control", placeholder: "e.g. L3, 1-5-3" %>
            </div>
            <div class="col-xs-12 col-sm-6 form-group">
              <%= f.label :ward %><br />
              <%= f.text_field :ward, class: "form-control", placeholder: "e.g. Yaesu" %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 col-sm-6 form-group">
              <%= f.label :prefecture %><br />
              <%= f.text_field :prefecture, class: "form-control", placeholder: "e.g. Chuo-ku" %>
            </div>
            <div class="col-xs-12 col-sm-6 form-group">
              <%= f.label :city %><br />
              <%= f.text_field :city, class: "form-control", placeholder: "e.g. Tokyo" %>
            </div>
          </div>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
