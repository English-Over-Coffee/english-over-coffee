<div class="row">
<% if current_student == @student %>
  <div class="col-xs-12">
    <%= link_to "Edit profile", edit_student_registration_path, class: "btn btn-primary pull-right" %>
  </div>
<% end %>
  <div class="col-lg-offset-1 col-lg-4 col-md-5 col-sm-6 col-xs-12">
    <%= image_tag @student.avatar.url(:square), :class => "img-responsive center-block img-thumbnail" %> 
  </div>
  <div class="col-lg-offset-1 col-lg-5 col-md-offset-1 col-md-6 col-sm-6 col-xs-12">
    <h1><%= @student.first_name %> <%= @student.last_name %></h1>
    <dl class="dl-horizontal">
<% if @student.hometown? %> 
      <dt>Hometown</dt>
      <dd><%= @student.hometown %></dd>
<% end %>
<% if @student.hobbies? %> 
      <dt>Hobbies</dt>
      <dd><%= @student.hobbies %></dd>
<% end %>
    </dl>
  </div>
</div>
