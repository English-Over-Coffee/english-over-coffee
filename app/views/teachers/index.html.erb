<h1>Teachers</h1>
<div class="row">
<% @teachers.each do |teacher| %>
  <% if teacher.first_name? or teacher.last_name? %>
  <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
    <div class="thumbnail">
      <%= image_tag teacher.avatar.url(:square) %>
      <div class="caption">
        <h3><%= teacher.first_name %> <%= teacher.last_name %></h3>
    <% if teacher.education? %>
        <p><small><%= teacher.education %></small></p>
    <% end %>
    <% if teacher.motto? %>
        <p><%= teacher.motto %></p>
    <% end %>
        <p>
          <%= link_to "Profile", teacher_url(id: teacher.id), class: "btn btn-primary" %>
          <%= link_to "Book", "#", class: "btn btn-default" %>
        </p>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
</div>
