<h1>Teachers</h1>
<div class="row">
<% @teachers.each do |teacher| %>
  <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
    <div class="thumbnail">
      <%= image_tag teacher.avatar.url(:square) %>
      <div class="caption">
        <h3><%= teacher.first_name %> <%= teacher.last_name %></h3>
        <p><small><%= teacher.education %></small></p>
        <p><%= teacher.motto %></p>
        <p><%= link_to "Profile", teacher_url(id: teacher.id), class: "btn btn-primary" %><a class="btn btn-default">Book</a></p>
      </div>
    </div>
  </div>
<% end %>
</div>
